<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="show_sql">true</property>
		<property name="hbm2ddl.auto">update</property>
		
		<mapping class="br.com.ohexpress.model.Usuario" />
		<mapping class="br.com.ohexpress.model.MateriaPrima" />
		<mapping class="br.com.ohexpress.model.Categoria" />
		<mapping class="br.com.ohexpress.model.CategoriaProduto" />
		<mapping class="br.com.ohexpress.model.Loja" />
		<mapping class="br.com.ohexpress.model.Endereco" />
		<mapping class="br.com.ohexpress.model.Produto" />
		<mapping class="br.com.ohexpress.model.ItemPedido" />
		<mapping class="br.com.ohexpress.model.Pedido" />
		<mapping class="br.com.ohexpress.model.FormaPagamento" />
		<mapping class="br.com.ohexpress.model.ItemProduto" />
		<mapping class="br.com.ohexpress.model.Imagem" />
		

	</session-factory>
</hibernate-configuration>